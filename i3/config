# starting network manager applet
exec --no-startup-id nm-applet

# start clipit
exec --no-startup-id clipit


# set auto lock
exec --no-startup-id xautolock time 10 -locker /home/hegole/.config/i3/lock.sh

# set screen layout
exec --no-startup-id ~/.screenlayout/screenlayout.sh

# set primary monitor
exec --no-startup-id xrandr DP-0 --output primary

exec --no-startup-id synergy

# remove application title bar
for_window [class="^.*"] border pixel 0

# gaps
